<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <ImageView
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:src="@drawable/back2" android:scaleType="fitXY" />
    <Button
        style="@style/Button"
        android:layout_margin="2dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:onClick="showHint"
        android:text="@string/help"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
    style="@style/Image"
        android:src="@drawable/back1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
               style="@style/SubTitle"
                android:text="@string/Player1" />
            <TextView
                android:text="@string/scoreA"
                android:id="@+id/team_a_score"
               style="@style/Title"
                android:gravity="center" />
            <EditText
                android:hint="@string/hint1"
                android:layout_marginLeft="20dp"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TAthrow1"/>
            <Button
                style="@style/Button"
                android:onClick="addThreeForTeamA"
                android:text="@string/Ax3Points" />
            <Button
                style="@style/Button"
                android:onClick="addTwoForTeamA"
                android:text="@string/Ax2Points" />
            <Button
                style="@style/Button"
                android:onClick="addOneForTeamA"
                android:text="@string/ASimpleShot" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                style="@style/SubTitle"
                android:text="@string/Player2" />
            <TextView
                android:id="@+id/team_b_score"
                style="@style/Title"
                android:text="@string/scoreB" />
            <EditText
                android:hint="@string/hint2"
                android:layout_marginLeft="20dp"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TBthrow1"/>
            <Button
                style="@style/Button"
                android:onClick="addThreeForTeamB"
                android:text="@string/Bx3Points" />
            <Button
                style="@style/Button"
                android:onClick="addTwoForTeamB"
                android:text="@string/Bx2Points" />
            <Button
                style="@style/Button"
                android:onClick="addOneForTeamB"
                android:text="@string/BSimpleShot" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:onClick="compare"
        android:id="@+id/SubmitShotA"
        style="@style/Button"
        android:text="@string/SubmitRound"/>
    <Button
        style="@style/Button"
        android:layout_width="match_parent"
        android:onClick="reset"
        android:text="@string/Reset" />
</LinearLayout>
    </ScrollView>
    </FrameLayout>